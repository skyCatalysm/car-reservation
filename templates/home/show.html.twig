{% block title %}Homepage{% endblock %}


{% block body %}
    <section class="second">
        <section id="first" class="d-flex justify-content-center align-items-center container">
            <div class="row">
                <div class="col-md-6">
                    <form class="bg-black-light px-2 py-5">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group input-group">
                                    <label class="form-group has-float-label">
                                        <input class="form-control text-light" type="text" placeholder="Dasma etc."/>
