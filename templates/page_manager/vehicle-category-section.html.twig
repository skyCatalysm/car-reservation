{% extends 'page_manager/_base_page_manager.html.twig' %}

{% block title %}
   Vehicle Categories Section
{% endblock %}

{% block body %}
    <div class="container">
            <section style="margin-top: 10rem" class="mb-3">
                <div class="row border border-dark rounded bg-black-light p-3">
                    <div class="col-12">
                        <div class="row">
                            <div class="col-12 mb-2">
                                <small class="text-light">Vehicle Categories</small>
                                <small class="text-light float-right">
                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal"><i class="fas fa-plus"></i> New</button>
                                </small>
                            </div>
                            {% for vehicle in vehicleCategory %}
                            <div class="col-4 border border-light">
                                <div class="row p-3">
                                    <div class="col-12 d-flex justify-content-center text-light"><h3>{{ vehicle.title }}</h3></div>
                                    <div class="col-12 d-flex justify-content-center"><img class="img-fluid" src="{{ asset('img/'~vehicle.content) }}" alt=""></div>
                                    <div class="col-12 d-flex justify-content-center text-light">{{ vehicle.description }}</div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </section>
    </div>
    <!-- The Modal -->
    <div class="modal" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="POST" action="{{ path('upload_vehicle_category') }}" enctype="multipart/form-data">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Create New</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <div class="form-group">
                        <label class="text-secondary" for="title">Title</label>
                        <input type="text" name="title" class="form-control text-light" id="title">
                    </div>
                    <div class="custom-file">
                        <input type="file" name="file" class="custom-file-input">
                        <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
                        <div class="invalid-feedback">Example invalid custom file feedback</div>
                    </div>
                    <div class="form-group">
                        <label class="text-secondary" for="about-us">Description</label>
                        <textarea name="description" class="form-control text-light" rows="5" maxlength="500" id="about-us"></textarea>
                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="submit" class="float-left btn btn-primary">
                        Submit
                    </button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

